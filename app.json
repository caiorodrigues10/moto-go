{
  "expo": {
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "name": "MotoGO",
    "slug": "motogo",
    "version": "1.0.0",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1C2129"
    },
    "constants": {
      "URL_API": "http://localhost:3333"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show your position on the map",
        "NSLocationAlwaysUsageDescription": "We need your location to show your position on the map"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ],
      "package": "com.caiorodriguesdoido.motogo"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Precisamos de sua localização em tempo real."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "c4dd48c5-f0f3-4286-8ef7-200c3f9a0081"
      }
    },
    "owner": "caiorodriguesdoido"
  }
  
}
